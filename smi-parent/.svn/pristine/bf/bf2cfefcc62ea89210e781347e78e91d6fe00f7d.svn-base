<div class="container-fluid">
  <!-- page content -->
  <div class="pagecontent">
    <!-- row -->
    <div class="row tile" data-ng-init="initialize()">
     <div class="tile-header bg-greensea dvd dvd-btm">
	    <h1 class="custom-font"><strong>{{globalColumnName}}</strong></h1>
     </div>
      <!-- col -->
      <div class="col-md-6">
         <div class="tile-body form-validation">
              <div class="form-group">
                <label class="col-sm-4 control-label">Column Name* :</label>
                <div class="col-sm-8" data-ng-show = "!isEdit">
                 <select name="f2" class="form-control mb-10" data-ng-model="globalColumnsData.columnName" >
                     <option value="">Select option...</option>
		             <option data-ng-repeat="globalColumnName in globalColumnNames">{{globalColumnName}}</option>
                  </select>
                </div>
                <div class="col-sm-8" data-ng-show = "isEdit">
                   <label>{{globalColumnsData.columnName}}</label>           
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">Description* :</label>
                <div class="col-sm-8">
                <textarea style="width: 100%;" rows="7" name="message" id="message" placeholder="Type your message" data-ng-model="globalColumnsData.columnDesc"  on-blur-validation ></textarea>
                <p class="help-block">
                  <span data-ng-show="contactForm.message.$invalid && !contactForm.message.$pristine || contactForm.message.$invalid && submitted">Message is required.</span>
                </p>
                </div>
              </div>
              <div class="form-group">
                <label class="col-sm-4 control-label">Column Values* :</label>
                <div class="col-sm-8">
                <textarea style="width: 100%;" rows="7" name="message" id="message" placeholder="Type your message" data-ng-model="globalColumnsData.columnValues"  on-blur-validation ></textarea>
                <p class="help-block">
                  <span data-ng-show="contactForm.message.$invalid && !contactForm.message.$pristine || contactForm.message.$invalid && submitted">Message is required.</span>
                </p>
                </div>
              </div>
      </div>
      <!-- /col -->
    </div>
