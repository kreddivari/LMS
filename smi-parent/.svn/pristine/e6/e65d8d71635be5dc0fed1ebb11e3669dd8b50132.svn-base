	private Twitter getTwitterHandle(String handle) {
		Twitter twitter = null;
		if(SmiConstants.ZEN_ASSIST.equalsIgnoreCase(handle))
		{
			twitter = this.zenAssistTwitter;
		}else if(SmiConstants.ZEN_BANK.equalsIgnoreCase(handle))
		{
			twitter = this.zenBankTwitter;
		}else
		{
			throw new RuntimeException("Invalid twitter handle passed "+handle);
		}
		return twitter;
	}

	public String postMessage(TwitterMessageBO twitterMessageBO, String handle) {
		String postId = null;
		Twitter twitter = getTwitterHandle(handle);
		try {
			if(twitterMessageBO.isPrivate())
			{
				DirectMessage dm = twitter.sendDirectMessage(twitterMessageBO.getId(), twitterMessageBO.getMessageText());
				postId = String.valueOf(dm.getId());
			}else
			{
				String screenName = twitterMessageBO.getScreenName();
				StatusUpdate update = new StatusUpdate("@"+screenName+" "+twitterMessageBO.getMessageText());
				System.out.println("screenName: "+screenName);
				System.out.println("update: "+"@"+screenName+" "+twitterMessageBO.getMessageText());
				if(twitterMessageBO.getInReplyToMessage() > 0)
				{
					update.setInReplyToStatusId(twitterMessageBO.getInReplyToMessage());
				}
				Status status = twitter.updateStatus(update);
				postId = String.valueOf(status.getId());
			}
		} catch (TwitterException e) {
			e.printStackTrace();
		}
		
		return postId;
	}
